	<!-- 根据订单id查询订单发票信息 -->
	<select id="findByOrderId" parameterType="int" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> from shop_order_invoice where order_id = #{orderId}
	</select>
	
