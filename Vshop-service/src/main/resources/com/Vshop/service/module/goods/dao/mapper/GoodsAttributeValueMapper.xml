<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.Vshop.service.module.goods.dao.mapper.GoodsAttributeValueMapper">
    <resultMap id="BaseResultMap" type="com.Vshop.core.entity.base.GoodsAttributeValue" >
        <id column="attr_value_id" property="attrValueId" jdbcType="INTEGER" />
        <result column="attr_value_name" property="attrValueName" jdbcType="VARCHAR" />
        <result column="attr_id" property="attrId" jdbcType="INTEGER" />
        <result column="type_id" property="typeId" jdbcType="VARCHAR" />
        <result column="attr_value_sort" property="attrValueSort" jdbcType="INTEGER" />
        <result column="is_del" property="isDel" jdbcType="TINYINT" />
        <result column="create_time" property="createTime" jdbcType="BIGINT" />
        <result column="update_time" property="updateTime" jdbcType="BIGINT" />
    </resultMap>


    <sql id="Base_Column_List" >
        attr_value_id, attr_value_name, attr_id, type_id, attr_value_sort,is_del
    </sql>

    <insert id="save" parameterType="com.Vshop.core.entity.base.GoodsAttributeValue" useGeneratedKeys="true" keyProperty="attr_id">
        INSERT INTO shop_attribute_value(attr_value_name, attr_id, type_id, attr_value_sort,is_del,create_time)
        VALUES(#{attrValueName},#{attrId},#{typeId},0,0,now());
    </insert>
    
    <!-- 新增属性值，有排序 -->
    <insert id="saveAttrVal" parameterType="com.Vshop.core.entity.base.GoodsAttributeValue" useGeneratedKeys="true" keyProperty="attr_id">
        INSERT INTO shop_attribute_value(attr_value_sort,attr_value_name, attr_id, type_id, attr_value_sort,is_del,create_time)
        VALUES(#{attrValueSort}，#{attrValueName},#{attrId},#{typeId},0,0,now());
    </insert>

    <delete id="deleteBatch" parameterType="int">
        delete from shop_attribute_value where type_id = #{typeId}
    </delete>

    <update id="deleteByType" parameterType="int">
        delete from shop_attribute_value where type_id = #{typeId}
    </update>

    <update id="deleteBatchByType" parameterType="java.lang.String">
        delete from shop_attribute_value where type_id in (${ids})
    </update>
    
    <!-- 根据属性id删除属性值 -->
    <delete id="deleteByAttrId" parameterType="int">
    	delete from shop_attribute_value where attr_id = #{attrId}
    </delete>

    <select id="findListByAttr" resultMap="BaseResultMap" parameterType="int">
        SELECT
        <include refid="Base_Column_List" />
        FROM shop_attribute_value
        where  is_del=0 and attr_id = #{attrId}
    </select>

    <update id="deleteById" parameterType="int">
         delete from shop_attribute_value where attr_value_id = #{id}
    </update>

    <update id="update" parameterType="com.Vshop.core.entity.base.GoodsAttributeValue">
        update shop_attribute_value
        <set>
            <if test="attrValueName != null and attrValueName != ''">
                attr_value_name = #{attrValueName},
            </if>
            <if test="attrValueSort != null">
                attr_value_sort = #{attrValueSort},
            </if>
        </set>
        where attr_value_id = #{attrValueId}
    </update>
</mapper>