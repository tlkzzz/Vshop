	</delete>
	
	<!-- 根据条件删除 -->
	<delete id="deleteByCondition" parameterType="com.Vshop.core.entity.base.Invoice">
		delete from shop_invoice where 1=1 <include refid="condition"/>
	</delete>
	
	<!-- 通过id主键查询 -->
	<select id="findByInvId" parameterType="int" resultMap="BaseResultMap">
		select 
		<include refid="Base_Column_List" /> 
		from shop_invoice where inv_id = #{invId} 
	</select>
	
	<!-- 分页查询退款总条数 -->
	<select id="findPageCount" parameterType="com.Vshop.core.entity.base.Invoice" resultType="int">
		select count(1)	from shop_invoice where 1=1
