			</if>
			<if test="isDefault != null ">
				is_default,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="memberId != null">
				#{memberId},
			</if>
			<if test="orderId != null">
				#{orderId},
			</if>
			<if test="invState != null">
				#{invState},
			</if>
			<if test="invTitle != null ">
				#{invTitle},
			</if>
			<if test="invContent != null ">
