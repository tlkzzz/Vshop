<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.Vshop.service.module.store.dao.mapper.ClasssMapper">
	<resultMap id="BaseResultMap" type="com.Vshop.core.entity.Classs">
		<result column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="parent_id" property="parentId" jdbcType="INTEGER" />
		<result column="sort" property="sort" jdbcType="TINYINT" />
		<result column="is_del" property="isDel" jdbcType="TINYINT" />
		<result column="create_time" property="createTime" jdbcType="BIGINT" />
		<result column="update_time" property="updateTime" jdbcType="BIGINT" />
        <result column="has_child" property="hasChild" jdbcType="INTEGER" />
        <collection property="classList" ofType="com.Vshop.core.entity.Classs"
                    column="id" javaType="arraylist"
                    select="com.Vshop.service.module.store.dao.mapper.ClasssMapper.findList">
        </collection>
	</resultMap>
	
	<resultMap id="BaseResultMap2" type="com.Vshop.core.entity.Classs">
		<result column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="parent_id" property="parentId" jdbcType="INTEGER" />
		<result column="sort" property="sort" jdbcType="TINYINT" />
		<result column="is_del" property="isDel" jdbcType="TINYINT" />
		<result column="create_time" property="createTime" jdbcType="BIGINT" />
		<result column="update_time" property="updateTime" jdbcType="BIGINT" />
        <result column="has_child" property="hasChild" jdbcType="INTEGER" />
	</resultMap>
	
	<sql id="Base_Column_List">
		id,name,parent_id,sort,is_del,create_time,update_time
	</sql>
	
	
	<resultMap id="VoResultMap" type="com.Vshop.service.module.store.vo.ClasssVo">
		<result column="p_id" property="pId" jdbcType="INTEGER" />
		<result column="p_name" property="pName" jdbcType="VARCHAR" />
		<result column="p_sort" property="pSort" jdbcType="TINYINT" />
		<result column="c_id" property="cId" jdbcType="INTEGER" />
		<result column="c_name" property="cName" jdbcType="VARCHAR" />
		<result column="c_sort" property="cSort" jdbcType="TINYINT" />
	</resultMap>

	<sql id="Vo_Column_List">
		p.id as p_id,p.name as p_name,p.sort as p_sort,c.id as
		c_id,c.name as
		c_name,c.sort as c_sort
	</sql>
	<sql id="whereStatement">
		<where>
			1 = 1
			and p.is_del = 0
			and p.parent_id=0
		</where>
	</sql>

	<sql id="orderStatement">
		order by p.sort,c.parent_id,c.sort
	</sql>
	
	<!-- 根据ID查实体 -->
	<select id="queryById" resultMap="BaseResultMap"
		parameterType="com.Vshop.service.utils.page.Pager">
		select
		<include refid="Base_Column_List" />
		from shop_store_class where 
		id = #{id,jdbcType=INTEGER} and is_del=0 order by sort
	</select>
	
	<!-- 基础父节点的信息-->
	<select id="queryClasssParentList" resultMap="BaseResultMap"
		parameterType="com.Vshop.service.utils.page.Pager">
		select
		<include refid="Base_Column_List" />,
        (select count(1) from shop_store_class s1 where s1.parent_id=s.id and s1.is_del = 0 ) has_child
		from shop_store_class s where 1=1 and is_del=0 and parent_id=0 order by sort
	</select>
	
	<!-- 查询List -->
	<select id="queryClasssList" resultMap="VoResultMap"
		parameterType="com.Vshop.service.utils.page.Pager">
		select
		<include refid="Vo_Column_List" />
		from shop_store_class p left join shop_store_class c on
		(p.id=c.parent_id and c.is_del=0)
		<include refid="whereStatement" />
		<include refid="orderStatement" />
	</select>

	<!-- 保存实体-->
    <insert id="save" parameterType="com.Vshop.core.entity.Classs" useGeneratedKeys="true" keyProperty="id">
        insert into shop_store_class(name, parent_id, sort, is_del, create_time)
        values (
        #{name,jdbcType=VARCHAR},#{parentId,jdbcType=INTEGER},#{sort,jdbcType=INTEGER},
        0, now())
    </insert>
     <!-- 根据ID修改数据 -->
    <update id="update" parameterType="com.Vshop.core.entity.Classs">
        update shop_store_class
        <set>
            <if test="name != null and name != ''">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="parentId != null">
                parent_id=#{parentId,jdbcType=INTEGER},
            </if>
            <if test="sort != null">
                sort=#{sort,jdbcType=INTEGER},
            </if>
            update_time=now()
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
    <!-- 根据ID删除数据 -->
    <update id="delete" parameterType="java.lang.Long">
        update shop_store_class
          set is_del = 1
        where id = #{id,jdbcType=INTEGER}
    </update>

    <select id="queryClasssChildrenList" resultMap="BaseResultMap"
            parameterType="com.Vshop.core.entity.Classs">
        select
        <include refid="Base_Column_List" />,
        (select count(1) from shop_store_class s1 where s1.parent_id=s.id and s1.is_del = 0 ) has_child
        from shop_store_class s
        where is_del=0
        <if test="parentId != null">
            and parent_id=#{parentId}
        </if>
        order by sort
    </select>

    <!--条件查询条数-->
    <select id="findCount" parameterType="com.Vshop.core.entity.Classs" resultType="int">
        SELECT
        count(*)
        FROM shop_store_class
        where  is_del=0
        <if test="name != '' and name != null">
            <![CDATA[ and name = #{name}]]>
        </if>
        <if test="sort != null ">
            and sort = #{sort}
        </if>
        <if test="id != null">
            and id != #{id}
        </if>
        <if test="parentId != null">
            and parent_id != #{parentId}
        </if>
    </select>
    
    <!--根据父id查询分类列表-->
    <select id="findList" resultMap="BaseResultMap2" parameterType="java.lang.Integer">
        SELECT
        <include refid="Base_Column_List" />,
        (select count(1) from shop_store_class s1 where s1.parent_id=s.id ) has_child
        FROM shop_store_class s
        where parent_id=#{parentId} and is_del = 0
        order by sort
    </select>
</mapper>